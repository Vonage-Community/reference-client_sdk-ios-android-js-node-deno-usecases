{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:start": {
      "cache": false,
      "persistent": false
    },
    "db:stop": {
      "cache": false,
      "persistent": false
    },
    "db:reset": {
      "cache": false,
      "persistent": false
    }
  }
}